#!/bin/bash

# Trinity Protocol Pre-commit Hook
# Validates Test-Implementation-Documentation synchronization before commit

echo "üõ°Ô∏è  Trinity Protocol: Pre-commit validation starting..."

# Set colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if node is available
if ! command -v node &> /dev/null; then
    echo -e "${RED}‚ùå Node.js is required for Trinity validation${NC}"
    exit 1
fi

# Check if trinity validation script exists
TRINITY_SCRIPT="scripts/trinity-validation.cjs"
if [ ! -f "$TRINITY_SCRIPT" ]; then
    echo -e "${RED}‚ùå Trinity validation script not found: $TRINITY_SCRIPT${NC}"
    echo "Please ensure Trinity Protocol is properly installed"
    exit 1
fi

# Run Trinity pre-commit validation
echo -e "${BLUE}üîç Running Trinity pre-commit validation...${NC}"
if node "$TRINITY_SCRIPT" pre-commit; then
    echo -e "${GREEN}‚úÖ Trinity pre-commit validation passed!${NC}"
    echo -e "${GREEN}üìã All changed files comply with Trinity Protocol${NC}"
else
    echo -e "${RED}‚ùå Trinity pre-commit validation failed!${NC}"
    echo -e "${YELLOW}üí° Fix the issues above before committing${NC}"
    echo ""
    echo "Trinity Protocol Requirements:"
    echo "‚Ä¢ All import paths must resolve correctly"
    echo "‚Ä¢ New implementation files need corresponding tests"
    echo "‚Ä¢ Critical files require extra validation"
    echo "‚Ä¢ File structure must follow project conventions"
    echo ""
    echo "Use 'npm run trinity:validate' to run full validation"
    exit 1
fi

# Additional check: ensure no debug code in production files
echo -e "${BLUE}üîç Checking for debug code...${NC}"
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(ts|js|tsx|jsx)$' || true)

if [ -n "$STAGED_FILES" ]; then
    DEBUG_PATTERNS="console\.log|debugger|TODO:|FIXME:|XXX:"
    
    for FILE in $STAGED_FILES; do
        if [ -f "$FILE" ]; then
            DEBUG_FOUND=$(grep -n -E "$DEBUG_PATTERNS" "$FILE" || true)
            if [ -n "$DEBUG_FOUND" ]; then
                echo -e "${YELLOW}‚ö†Ô∏è  Debug code found in $FILE:${NC}"
                echo "$DEBUG_FOUND"
                echo ""
            fi
        fi
    done
fi

# Check for large files
echo -e "${BLUE}üîç Checking for large files...${NC}"
LARGE_FILES=$(git diff --cached --name-only | xargs -I {} sh -c 'if [ -f "{}" ]; then echo "$(stat -f%z "{}" 2>/dev/null || stat -c%s "{}" 2>/dev/null || echo 0) {}"; fi' | awk '$1 > 1048576 { print $2, "(" $1/1024/1024 " MB)" }' || true)

if [ -n "$LARGE_FILES" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Large files detected:${NC}"
    echo "$LARGE_FILES"
    echo ""
    echo "Consider using Git LFS for large files"
fi

echo -e "${GREEN}üéØ Pre-commit Trinity validation completed successfully!${NC}"
echo -e "${BLUE}üìù Ready to commit with Trinity Protocol compliance${NC}"
exit 0